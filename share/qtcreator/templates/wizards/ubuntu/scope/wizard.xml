<?xml version="1.0" encoding="UTF-8"?>
<wizard version="1" kind="project" firstpage="10" id="UbuntuUnityScope" category="A.UbuntuProject"
        platformIndependent="true" 
        class="ubuntu-project-cmake"
				featuresRequired=""
        >
    <icon>../share/ubuntu.png</icon>
    <description>A simple C++ based Unity Scope</description>
    <displayname>Unity Scope</displayname>
    <displaycategory>Ubuntu</displaycategory>
    <files>
			<file source="data/displayName.ini.in"   	target="data/%ProjectName%.ini.in" openeditor="false"/>
			<file source="data/CMakeLists.txt"   			target="data/CMakeLists.txt" openeditor="false"/>
			<file source="displayName.json"   				target="%ProjectName%.json" openeditor="false"/>
			<file source="test/simpletest.cpp"   			target="test/simpletest.cpp" openeditor="false"/>
			<file source="test/CMakeLists.txt"   			target="test/CMakeLists.txt" openeditor="false"/>
			<file source="manifest.json"   						target="manifest.json" openeditor="false"/>
			<file source="src/displayName-preview.h"  target="src/%ProjectName%-preview.h" openeditor="false"/>
			<file source="src/displayName-query.h"   	target="src/%ProjectName%-query.h" openeditor="false"/>
			<file source="src/displayName-preview.cpp"	target="src/%ProjectName%-preview.cpp" openeditor="false"/>
			<file source="src/displayName-query.cpp"   	target="src/%ProjectName%-query.cpp" openeditor="false"/>
			<file source="src/CMakeLists.txt"   				target="src/CMakeLists.txt" openeditor="false"/>
			<file source="src/displayName-scope.h"   		target="src/%ProjectName%-scope.h" openeditor="false"/>
			<file source="src/displayName-scope.cpp"  	target="src/%ProjectName%-scope.cpp" openeditor="false"/>
			<file source="readme.txt"                  	target="readme.txt" openeditor="true"/>
			<file source="CMakeLists.txt"   					target="CMakeLists.txt" openeditor="true" openproject="true"/>
    </files>

	  <!-- Create a 2nd wizard page with click package parameters -->
		<fieldpagetitle>Click package parameters</fieldpagetitle>
		<fields>
			<field mandatory="true" name="ClickMaintainer">
			  <fieldcontrol class="QLineEdit" validator='^[^"]+$'
			                defaulttext="" placeholdertext="Maintainer"/>
			  <fielddescription>Maintainer:</fielddescription>
			</field>
		  <field name="ScopeType">
		    <fieldcontrol class="QComboBox" defaultindex="0">
		      <comboentries>
		        <comboentry value="local">
		    	    <comboentrytext>Scope with local content</comboentrytext>
		        </comboentry>
				    <comboentry value="network">
		    	    <comboentrytext>Scope with network access</comboentrytext>
				    </comboentry>
			    </comboentries>
		    </fieldcontrol>
		    <fielddescription>Scopy type:</fielddescription>
		  </field>
		</fields>

</wizard>
