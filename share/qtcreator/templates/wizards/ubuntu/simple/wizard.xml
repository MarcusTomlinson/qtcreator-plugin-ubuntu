<?xml version="1.0" encoding="UTF-8"?>
<wizard version="1" kind="project" firstpage="10" id="UbuntuAppSimple'" category="A.UbuntuProject"
        platformIndependent="true" 
        class="ubuntu-project-plain-qml"
				featuresRequired=""
        >
    <icon>../share/ubuntu.png</icon>
    <description>Creates a Qt Quick 2 application project with a sample UI containing a Label and a Button. This project contains QML code only.

Includes also unit and functional tests.
</description>
    <displayname>App with Simple UI</displayname>
    <displaycategory>Ubuntu</displaycategory>
    <files>
			<file source="../share/displayName.qmlproject" 				target="%ProjectName%.qmlproject" openproject="true"/>
			<file source="components/HelloComponent.qml"  target="components/HelloComponent.qml" openeditor="false"/>
			<file source="main.qml"   										target="main.qml" openeditor="true"/>
			<file source="displayName.png"   							target="%ProjectName%.png" openeditor="false" binary="true"/>
			<file source="displayName.desktop"   					target="%ClickHookName%.desktop" openeditor="false"/>
			<file source="tests/autopilot/displayName/test_main.py"   target="tests/autopilot/%ProjectName%/test_main.py" openeditor="false"/>
			<file source="tests/autopilot/displayName/__init__.py"   	target="tests/autopilot/%ProjectName%/__init__.py" openeditor="false"/>
			<file source="tests/autopilot/run"  										  target="tests/autopilot/run" openeditor="false"/>
			<file source="tests/unit/tst_hellocomponent.qml"   				target="tests/unit/tst_hellocomponent.qml" openeditor="false"/>
			<file source="Makefile"   																target="Makefile" openeditor="false"/>
			<file source="../share/manifest.json"   						target="manifest.json" openeditor="false"/>
    </files>

	  <!-- Create a 2nd wizard page with click package parameters -->
		<fieldpagetitle>Click package parameters</fieldpagetitle>
		<fields>
			<field mandatory="true" name="ClickDomain">
			  <fieldcontrol class="QLineEdit" validator='^[^"]+$'
			                defaulttext="" placeholdertext="Domain"/>
			  <fielddescription>Domain:</fielddescription>
			</field>
			<field mandatory="true" name="ClickMaintainer">
			  <fieldcontrol class="QLineEdit" validator='^[^"]+$'
			                defaulttext="" placeholdertext="Maintainer"/>
			  <fielddescription>Maintainer:</fielddescription>
			</field>
			<field mandatory="true" name="ClickHookName">
			  <fieldcontrol class="QLineEdit" validator='^[^"]+$'
			                defaulttext="app" placeholdertext="app hook name"/>
			  <fielddescription>Hook:</fielddescription>
			</field>
		</fields>
</wizard>
