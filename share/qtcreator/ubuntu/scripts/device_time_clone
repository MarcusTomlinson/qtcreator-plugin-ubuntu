. `dirname $0`/functions.inc

LOCAL_DATE=`date +%Y%m%d`
LOCAL_TIME=`date +%T`
TIMEZONE=`cat /etc/timezone`

adb_shell sed -i "s#.*/.*#${TIMEZONE=}#" /etc/timezone
adb_shell dpkg-reconfigure --frontend noninteractive tzdata > /dev/null
adb_shell date +%Y%m%d -s "${LOCAL_DATE}" > /dev/null
adb_shell date +%T -s "${LOCAL_TIME}" > /dev/null

