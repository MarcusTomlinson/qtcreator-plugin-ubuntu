set -e
EMULATOR_NAME=$2
EMULATOR_PATH=$1
WHOAMI=`whoami`
pkexec sh -c "HOME=$HOME ubuntu-emulator create ${EMULATOR_NAME};chown ${WHOAMI}:${WHOAMI} ${EMULATOR_PATH}/${EMULATOR_NAME} -R"
